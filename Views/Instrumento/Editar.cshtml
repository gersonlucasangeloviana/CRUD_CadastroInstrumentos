@model Instrumentos.Models.Instrumento
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }
    @Html.ValidationSummary()
    @Html.HiddenFor(c => c.InstrumentoId)
    <div class="form-group">
        @Html.LabelFor(c => c.Descricao)
        @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Descricao)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Tipo)
        @Html.DropDownListFor(c => c.TipoId,
                ViewBag.tipos as SelectList, "Selecione",
                new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.AnoFab)
        @Html.TextBoxFor(c => c.AnoFab, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.AnoFab)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Valor)
        @Html.TextBoxFor(c => c.Valor, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.AnoFab)
    </div>
    <div class="form-group">
        <input type="submit" value="Atualizar" class="btn btn-primary" />
    </div>
}